<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!--深绿色背景-->
            <item android:drawable="@color/colorGreenDark" android:left="5dp" android:top="5dp"/>
            <!--前绿色背景-->
            <item android:bottom="5dp" android:drawable="@color/colorGreenLight" android:right="5dp"/>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!--灰色背景-->
            <item android:drawable="@color/colorGray" android:left="5dp" android:top="5dp"/>
            <!--前白色背景-->
            <item android:bottom="5dp" android:drawable="@color/colorWhite" android:right="5dp"/>
        </layer-list>
    </item>

</selector>